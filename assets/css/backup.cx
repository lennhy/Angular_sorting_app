/*==================================FORMS*/
label.formgroup{
	color:#1fc3ff;
	padding: 0;
	margin-top: 20px;
	letter-spacing: .08em;
	font-size: 1em;
	font-weight: 700;	
}

select {
/*   margin: 10px auto;
*/  background: transparent;
    border-radius: 0px;
    border: 2px solid #1fc3ff;
    box-shadow: transparent;
    cursor: pointer;
    color: #1fc3ff;
    font-weight: 300; /* Overwrites previous font-weight: bold; */
	box-shadow: none;	
}
select input {
    background: transparent;

}
/*===================================BUTTONS*/
button[type="button"], .btn-default:focus, .btn-default.focus{
	background-color: transparent;
	border-top:3px solid #428bca;
	width: 20%;
	margin-left: 0;
	margin-right: 0;	
	margin-bottom: 10px;
	padding: 3	0px;
	color: #428bca;
	border-radius: 0;
	text-transform: uppercase;
	font-size: 2em;
	font-weight: 700;
	transition: background-color .8s,  color .8s, border .8s;
}

button[type="button"]:hover{
	background-color: #428bca;
	color: #fff;
}
span.fixed{
	position: fixed;
	border-bottom: 2px solid #333;
}
