/*==================================NAVIGATION*/
nav.navbar {
	width:100%;
	height:auto;
	position: fixed;
	background-color: #fff;

}
ul.navbar-brand{
	margin-right: 50px;
	width: 100px;
}
ul.navbar-brand img{
	width:75%;
	height: auto;
}
ul.nav li.sort-non-active{
	width:200px;
	padding: 0;
	margin-right: 20px;
}

li{
	margin: 0;
	padding: 0;
	text-decoration: none;
	list-style: none;
}
li.non-active h3{
	color:#fff;
	font-size:1.2em;
/*	margin-top: 20px;
*/	text-transform: uppercase;
	letter-spacing: .09em;
}
